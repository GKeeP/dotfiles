	#status_command i3status
	status_command bumblebee-status -m battery mpd date time pasink -p time.format="%H:%M:%S" date.format="%A, %B %d %Y" date.left-click="gsimplecal" -t iceberg-dark-powerline
	i3bar_command i3bar
	position top
	height 23
	tray_output eDP1
	font pango:DejaVu Sans Mono Nerd Font 9
	strip_workspace_numbers no 

        colors {
	background #161821
	statusline #c6c9d1
	separator  #c6c9d1

#                           border  backgr. text
	focused_workspace   #161821 #b2b4be #161821
	active_workspace    #b4be82 #b4be82 #161821
	inactive_workspace  #161821 #161821 #d2d4de
	urgent_workspace    #b4be82 #b4be82 #161821
  
    }
}

