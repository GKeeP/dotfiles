# i3bar + bumblebee-status 
bar {   
	status_command bumblebee-status -m caffeine memory battery spotify date time pasink pasource -p time.format="%H:%M:%S" date.format="%a, %b %d %Y" -t iceberg
	i3bar_command i3bar
	#status_command i3status
	position top

	tray_output eDP-1

	font pango:DejaVu Sans Mono, FontAwesome 9
	strip_workspace_numbers yes 

        colors {

	background #161821
	statusline #c6c9d1
	separator  #c6c9d1

#                           border  backgr. text
	focused_workspace   #c6c9d1 #d2d4de #0f1117
	active_workspace    #b4be82 #b1b2c0 #0f1117
	inactive_workspace  #161821 #0f1117 #d2d4de
	urgent_workspace    #b4be82 #b4be82 #161821
  
    }
}

bindsym $mod+m bar mode toggle

# Theme colors
# class                   border  backgr. text    indic.   child_border
  client.focused          #b1b2c0 #b1b2c0 #0f1117 #FDF6E3 
