	# apply wallpaper
	exec_always feh --bg-fill /home/gkeep/.wallpaper/trainglify1.png
	# change kb layout
	exec "setxkbmap -option 'grp:alt_shift_toggle' -layout 'us,ru'"
	# screenshot tool
	bindsym $mod+Print exec flameshot gui
	# launch clipboard manager
	bindsym $mod+c exec clipster -sp
# autostart
    # networkmanager applet
    exec --no-startup-id nm-applet
    # bluetooth applet
    #exec --no-startup-id blueman-applet
    # autolock
    exec_always bash /home/gkeep/scripts/lightsOn.sh
	# clipboard manager
	exec --no-startup-id clipster -d
	# gestures
	exec --no-startup-id libinput-gestures-setup start
	# notifications daemon
    exec --no-startup-id dunst
    # hide cursor after 3 sec
	exec unclutter --timeout 3
	# compositor
	exec --no-startup-id compton --backend glx --vsync opengl-swc --config ~/.config/compton/compton.conf
